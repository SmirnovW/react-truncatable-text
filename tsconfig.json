{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["es6", "es7", "esnext", "dom"],
    "types": ["@types/jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./css-modules.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
